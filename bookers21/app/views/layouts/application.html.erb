<!DOCTYPE html>
<html>
  <head>
    <title>Bookers21</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
　　<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<body class="d-flex flex-column vh-100">
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to 'Bookers', root_path, class: 'navbar-brand' %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            </li class="fas fa-home nav-link text-light">
            <%= link_to 'Home', user_path(current_user.id), class: 'fas fa-home nav-link text-light' %>
            <li class="nav-item">
              <%= link_to 'Users', users_path, class: 'fas fa-users nav-link  text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Books', books_path, class: 'fas fa-book-open nav-link  text-white' %>
            <li class="nav-item ">
              <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'fas fa-sign-out-alt nav-link text-light' %>
            </li>
            </li>
            <% else %>
            </li class="fas fa-home nav-link text-light">
            <%= link_to ' Home', root_path, class: 'fas fa-home nav-link text-light' %>
            </li class="fas fa-home nav-link text-light">
            <%= link_to ' About', about_path, class: 'fas fa-link nav-link text-light' %>
            <li class="nav-item">
              <%= link_to " sign up", new_user_registration_path, class: 'fas fa-user-plus nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to " login", new_user_session_path, class: 'fas fa-sign-in-alt nav-link text-white' %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <p class="notice"><%= notice %></p>
    <main class="mb-auto">
    <%= yield %>
    </main>
    <footer class="text-black pt-5 pb-4">
      <div class="container-mt-5">
        <div class="row no-gutters">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
