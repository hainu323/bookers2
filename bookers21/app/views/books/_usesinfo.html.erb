
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
        <tbody><tr></tr>
  <tr>
	  <th>name</th>
	  <th> <h3 class="profile-name"><%= user.name %></h3></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th>
	    <div class="post-body"><%= user.introduction %></div></th>

	 </tr>
</tbody></table>
<div class="row">
<%= link_to "", edit_user_path(user), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
 </div>
<h1>New book</h1>

<%= form_with model: book, url: books_path, method: :post, local:true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
<% end %>
</div>